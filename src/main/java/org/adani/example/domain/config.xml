<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="httpMessageConverter"
          class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter"/>

    <bean id="serviceUrl" class="java.lang.String">
        <constructor-arg value="http://jsonplaceholder.typicode.com/todos"/>
    </bean>

    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate" autowire="byName">
        <property name="messageConverters">
            <list>
                <ref bean="httpMessageConverter"/>
            </list>
        </property>
    </bean>

    <bean id="restClient" class="org.adani.example.domain.TodoRestClient" autowire="byName"/>
    <bean id="todoDAO" class="org.adani.example.domain.TodoDAO" autowire="byName"/>
    <bean id="todoCacheManager" class="org.adani.example.domain.TodoCacheManager" autowire="byName"/>
    <bean id="TodoRestEndpoint" class="org.adani.example.domain.TodoRESTEndpoint" init-method="initialiseService"
          autowire="byName"/>

</beans>