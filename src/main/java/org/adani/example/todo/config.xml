<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="httpMessageConvert" class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter"/>
    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
        <property name="messageConverters">
            <list>
                <ref bean="httpMessageConvert"/>
            </list>
        </property>
    </bean>

    <bean id="restClient" class="org.adani.example.todo.TodoRestClient">
        <property name="restTemplate" ref="restTemplate"/>
    </bean>


    <bean id="todoDAO" class="org.adani.example.todo.TodoDAO"/>

    <bean id="todoCacheManager" class="org.adani.example.todo.TodoCacheManager">
        <property name="restClient" ref="restClient"/>
        <property name="todoDAO" ref="todoDAO"/>
    </bean>

    <bean id="TodoRestEndpoint" class="org.adani.example.todo.TodoRESTEndpoint" init-method="initialiseService">
        <property name="todoCacheManager" ref="todoCacheManager"/>
    </bean>

</beans>